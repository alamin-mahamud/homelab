# Proxmox API Configuration
proxmox_api_url          = "https://10.0.0.10:8006/api2/json"
proxmox_api_token_id     = "terraform@pam!terraform"
proxmox_api_token_secret = "your-api-token-here"
proxmox_tls_insecure      = true

# Default Proxmox Node
proxmox_node = "proxmox-01"

# VM Template Configuration
vm_template_name = "ubuntu-2204-cloudinit"
vm_storage       = "local-lvm"

# Network Configuration
network_bridge  = "vmbr0"
network_gateway = "10.0.0.1"
network_dns     = ["10.0.0.1", "1.1.1.1"]
network_domain  = "homelab.local"

# SSH Configuration
ssh_public_keys = [
  "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIExample your-key@homelab"
]

# VM Defaults
default_vm_cores     = 2
default_vm_memory    = 4096
default_vm_disk_size = "50G"

# Environment Tag
environment = "production"